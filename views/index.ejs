<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/homepage.css" />
  </head>
  <body>
    <h1>Messages:</h1>
    <% messages.forEach((message) => { %>
    <div class="message">
      <p><%= message.added %></p>
      <p><%= message.text %></p>
      <p><%= message.user %></p>
      <a href="/message/<%= message.id %>"><button>Details</button></a>
    </div>
    <% }) %>
    <h2>
      <a href="/new"><button>New Message</button></a>
    </h2>
  </body>
</html>
